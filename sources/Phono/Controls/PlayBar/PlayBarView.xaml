<?xml version="1.0" encoding="utf-8" ?>
<base:PlayBarBase
    x:Class="Phono.Controls.PlayBar.PlayBarView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="using:Phono.Controls.Base"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Phono.Controls.PlayBar"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="56" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid ColumnSpacing="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="48" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="48" />
                <ColumnDefinition Width="48" />
            </Grid.ColumnDefinitions>

            <!--  Cover image  -->
            <Border
                Grid.Column="0"
                Width="40"
                Height="40"
                VerticalAlignment="Center"
                CornerRadius="4">
                <Grid>
                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE90B;" />
                    <Image x:Name="CoverImage" Stretch="UniformToFill" />
                </Grid>
            </Border>

            <!--  Song title and album  -->
            <StackPanel
                Grid.Column="1"
                Margin="8,0"
                VerticalAlignment="Center"
                Orientation="Vertical">
                <TextBlock
                    x:Name="SongTitleText"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                    Text="{Binding CurrentSong.Title, FallbackValue='Unknown'}"
                    TextTrimming="CharacterEllipsis" />

                <TextBlock
                    x:Name="AlbumText"
                    FontSize="12"
                    Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                    Opacity="0.75"
                    Text="{Binding CurrentAlbum.Name, FallbackValue='Unknown'}"
                    TextTrimming="CharacterEllipsis" />
            </StackPanel>

            <!--  Play button (kept as existing)  -->
            <ToggleButton
                x:Name="PlayButton"
                Grid.Column="2"
                Style="{ThemeResource PlayButtonStyle}" />

            <!--  More button  -->
            <Button
                x:Name="MoreButton"
                Grid.Column="3"
                Width="40"
                Height="40"
                Margin="4"
                VerticalAlignment="Center"
                Background="Transparent"
                BorderThickness="0"
                Content="â‹¯"
                FontSize="20"
                ToolTipService.ToolTip="More" />
        </Grid>
        <ProgressBar
            Grid.Row="1"
            HorizontalAlignment="Stretch"
            Value="10"/>
    </Grid>
</base:PlayBarBase>

<?xml version="1.0" encoding="utf-8" ?>
<base:RootPageBase
    x:Class="Phono.Views.App.RootPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="using:Phono.Views.Base"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Phono.Views.App"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media="using:CommunityToolkit.WinUI.Media"
    xmlns:playbar="using:Phono.Controls.PlayBar"
    xmlns:ui="using:CommunityToolkit.WinUI"
    mc:Ignorable="d">
    <base:RootPageBase.Resources>
        <media:AttachedCardShadow x:Key="PlayBarShadow" Offset="0" />
    </base:RootPageBase.Resources>

    <Grid>
        <Grid>
            <Grid
                x:Name="BottomArea"
                Margin="8"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                ui:Effects.Shadow="{ThemeResource PlayBarShadow}">
                <Grid
                    x:Name="PlayBarArea"
                    Height="66"
                    Width="512"
                    CornerRadius="10">
                    <Border x:Name="PlayBarBackground" Background="{ThemeResource AcrylicInAppFillColorBaseBrush}" />
                    <playbar:PlayBarView Margin="4" />
                </Grid>

            </Grid>
        </Grid>

        <Frame x:Name="ShellFrame" />
    </Grid>
</base:RootPageBase>

<?xml version="1.0" encoding="utf-8" ?>
<base:HomePageBase
    x:Class="Phono.Views.Netease.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="using:Phono.Views.Base"
    xmlns:behaviors="using:Microsoft.Xaml.Interactivity"
    xmlns:controls="using:Phono.Controls.App"
    xmlns:controls2="using:Phono.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:imageex="using:ImageEx"
    xmlns:kernel="using:Richasy.WinUIKernel.Share.Base"
    xmlns:local="using:Phono.Views.Netease"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:HyPlayer.NeteaseProvider.Models"
    mc:Ignorable="d">
    <base:HomePageBase.Resources>
        <DataTemplate x:Key="TopChartCardTemplate" x:DataType="models:NeteasePlaylist">
            <ItemContainer>
                <kernel:CardControl
                    x:Name="Card"
                    Width="240"
                    Height="128"
                    CornerRadius="6">
                    <Grid
                        Padding="16"
                        HorizontalAlignment="Stretch"
                        ToolTipService.ToolTip="{x:Bind Name}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="84" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <imageex:ImageEx
                            Width="84"
                            Height="84"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            CornerRadius="4"
                            Source="{x:Bind Converter={StaticResource CoverToImageSourceConverter}, ConverterParameter=84}"
                            Stretch="UniformToFill" />
                        <Grid
                            Grid.Column="1"
                            Margin="16,9,0,9"
                            RowSpacing="4">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                FontSize="14"
                                FontWeight="SemiBold"
                                MaxLines="2"
                                Text="{x:Bind Name}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="Wrap"
                                ToolTipService.ToolTip="{x:Bind Name}" />
                            <TextBlock
                                Grid.Row="1"
                                VerticalAlignment="Bottom"
                                FontSize="14"
                                Foreground="{StaticResource SystemControlForegroundBaseMediumBrush}"
                                MaxLines="1"
                                Text="{x:Bind CreatorList, Converter={StaticResource StringListToStringConverter}}"
                                TextTrimming="CharacterEllipsis"
                                ToolTipService.ToolTip="{x:Bind CreatorList, Converter={StaticResource StringListToStringConverter}}" />
                        </Grid>
                    </Grid>
                </kernel:CardControl>

            </ItemContainer>
        </DataTemplate>
    </base:HomePageBase.Resources>

    <ScrollViewer>
        <RefreshContainer RefreshRequested="RefreshContainer_RefreshRequested">
            <Grid>
                <controls:HeaderImageControl
                    x:Name="HeaderImage"
                    Height="400"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    HeroImageSource="https://flarum.csur.fun/2022-12-25/1671970508-774457-image.png" />
                <Grid x:Name="ContentArea" Margin="{StaticResource PageContentThickness}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="300" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid>
                            <TextBlock Margin="0,12" Style="{ThemeResource TitleTextBlockStyle}">
                                Home
                            </TextBlock>
                        </Grid>
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid x:Name="GridLoginedContent">
                                
                            </Grid>
                            <Grid
                                x:Name="GridTopchart"
                                Grid.Row="1"
                                Grid.ColumnSpan="2"
                                Margin="0,12,0,0"
                                RowSpacing="8">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <HyperlinkButton Margin="12,8" Foreground="{ThemeResource TextFillColorPrimary}">
                                    <behaviors:Interaction.Behaviors>
                                        <controls2:ButtonContentSnapBehavior SnapType="Left" />
                                    </behaviors:Interaction.Behaviors>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock
                                            x:Uid="HomePage_HypBtn_Topchart"
                                            Style="{StaticResource SubtitleTextBlockStyle}"
                                            Text="Rank List" />
                                        <FontIcon
                                            Margin="4,2,0,0"
                                            HorizontalAlignment="Left"
                                            Foreground="{ThemeResource SystemAccentColorLight2}"
                                            Glyph="&#xE970;" />
                                    </StackPanel>
                                </HyperlinkButton>
                                <ItemsView
                                    x:Name="TopchartItemsView"
                                    Grid.Row="1"
                                    Height="288"
                                    VerticalAlignment="Top"
                                    ItemTemplate="{StaticResource TopChartCardTemplate}"
                                    ItemsSource="{x:Bind ViewModel.TopPlaylists}"
                                    Layout="{StaticResource HomePageCardsLayout}" />
                            </Grid>
                        </Grid>
                    </Grid>

                </Grid>

            </Grid>
        </RefreshContainer>
    </ScrollViewer>

</base:HomePageBase>

<?xml version="1.0" encoding="utf-8" ?>
<base:HomePageBase
    x:Class="Phono.Views.Netease.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="using:Phono.Views.Base"
    xmlns:controls="using:Phono.Controls.App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Phono.Views.Netease"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <controls:HeaderImageControl
            x:Name="HeaderImage"
            Height="400"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            HeroImageSource="/Assets/02.jpg" />
        <Grid x:Name="ContentArea" Margin="108,48">
            <Grid>
                <TextBlock Margin="0,12" Style="{ThemeResource TitleTextBlockStyle}">
                    Home
                </TextBlock>
            </Grid>
        </Grid>
    </Grid>
</base:HomePageBase>
